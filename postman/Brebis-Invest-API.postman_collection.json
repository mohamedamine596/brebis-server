        },
        {
          "name": "Get Investment Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/investments/stats",
              "host": ["{{baseUrl}}"],
              "path": ["investments", "stats"]
            }
          }
        },
        {
          "name": "Get Recent Activities",
          "request": {
            "method": "GET",
